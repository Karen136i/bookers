<h1>Books</h1>
<table>
  <thesd>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thesd>
  <tbody>
    <%= @books.each do |book| %>
    <tr>

      <td>
       <%= book.title %>
      </td>

      <td>
        <%= book.body %>
      </td>

      <td>
         <%= link_to "Show", book_path(book.id) %>
         <%= link_to "Edit", edit_book_path(book.id) %>
         <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>

  <h3>Body</h3>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>

  <% end %>